generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  userID      Int     @id @default(autoincrement())
  userFname   String
  userLname   String
  userGender  String
  userEmail   String  @unique
  userPhone   String
  userPass    String
  userPic     String?
}

model Shop {
  shopID        Int       @id @default(autoincrement())
  shopFname     String
  shopLname     String
  shopGender    String
  shopEmail     String    @unique
  shopPhone     String
  shopPass      String
  shopName      String
  shopLocation  String
  shopPic       String?
  shopQR        String?
  shopOpenTime  String    @default("09:00")
  shopCloseTime String    @default("18:00")
  shopOpen      Boolean   @default(false)
}